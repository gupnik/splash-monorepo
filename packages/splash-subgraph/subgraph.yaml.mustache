specVersion: 0.0.3
description: >-
  Splash
schema:
  file: ./schema.graphql
dataSources:
  - kind: ethereum/contract
    name: SplashProject
    network: {{network}}
    source:
      address: '{{splashProject.address}}'
      abi: SplashProject
      startBlock: {{splashProject.startBlock}}
    mapping:
      kind: ethereum/events
      apiVersion: 0.0.5
      language: wasm/assemblyscript
      file: ./src/splash-project.ts
      entities:
        - Account
        - SplashProject
        - Link
      abis:
        - name: SplashProject
          file: ../splash-contracts/abi/contracts/SplashProject.sol/SplashProject.json
      eventHandlers:
        - event: ProjectCreated(indexed uint256,address,uint256,string)
          handler: handleProjectCreated
        - event: ProjectURIUpdated(indexed uint256,string)
          handler: handleProjectURIUpdated
        - event: ConstituentAdded(indexed uint256,indexed uint256)
          handler: handleConstituentAdded